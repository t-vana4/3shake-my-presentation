{
  "name": "3shake-my-presentation",
  "private": true,
  "scripts": {
    "dev": "slidev ${SLIDES:-slides/example/slides.md} --open",
    "build": "slidev build ${SLIDES:-slides/example/slides.md}",
    "build:all": "for dir in slides/*/; do slide_name=$(basename \"$dir\"); echo \"Building: $slide_name\"; slidev build \"$dir/slides.md\" --base \"/${npm_package_name}/${slide_name}/\" --out \"../../dist/${slide_name}\"; done",
    "export": "slidev export ${SLIDES:-slides/example/slides.md}"
  },
  "devDependencies": {
    "@slidev/cli": "^52.0.0",
    "@slidev/theme-default": "^0.25.0"
  },
  "dependencies": {
    "@ktym4a/slidev-theme-ktym4a": "^0.3.2",
    "slidev-theme-geist": "^0.8.1",
    "slidev-theme-nord": "^0.0.6"
  }
}
